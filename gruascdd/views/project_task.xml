<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_task_form_inherit_cdd" model="ir.ui.view">
            <field name="name">project.task.form.inherit_cdd</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_ids']" position="after">
                    <field name="employee_ids" widget="many2many_tags" options="{'no_open':True, 'no_create': True}" domain="[('type_employee','!=','')]"/>
                </xpath>

                <xpath expr="//field[@name='user_ids']" position="replace">
                    <field name="user_ids" invisible="True"/>
                </xpath>                
                <xpath expr="//page[@name='extra_info']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <xpath expr="//field[@name='timesheet_ids']" position="attributes">
                    <!--<attribute name="attrs">{'readonly':[('editable','=',False)]}</attribute>-->
                    <attribute name="readonly">True</attribute>
                </xpath>
                <xpath expr="//field[@name='allocated_hours']" position="attributes">
                    <!--<attribute name="attrs">{'readonly':[('editable','=',False)]}</attribute>-->
                    <attribute name="readonly">True</attribute>
                </xpath>
                <xpath expr="//page[@name='description_page']" position="after">
                    <page name="binnacle_page" string="Bitácora">
                        <field name = "id" invisible = "1"/>
                        <field name = "editable" invisible = "1"/>
                        <field name="binnacle_ids" context="{'default_parent_id_int': id}" readonly= "[('editable', '=', False)]">
                            <tree editable="bottom" decoration-danger="salto_secuencia==True" default_order="date_init">
                                <field name = "parent_id_int" invisible = "1" force_save="1"/>
                                <field name = "salto_secuencia" invisible = "1" force_save="1"/>
                                <field name = "parent_id" invisible = "1"/>
                                <field name = "product_id" domain="[('in_sale_order', '=', parent_id_int)]"/>
                                <field name = "gruero_id" required="1" options="{'no_open':True, 'no_create': True}" context="{'type_employee': 'gruero'}" domain="['&amp;', ('type_employee','=','gruero'),('in_project_task', '=', parent_id_int)]"/>
                                <field name = "ayudante_id" required="1" options="{'no_open':True, 'no_create': True}" context="{'type_employee': 'ayudante'}" domain="['&amp;', ('type_employee','=','ayudante'),('in_project_task', '=', parent_id_int)]"/>
                                <field name = "tercer_ayudante_id" options="{'no_open':True, 'no_create': True}" context="{'type_employee': 'ayudante'}" domain="['&amp;', ('type_employee','=','ayudante'),('in_project_task', '=', parent_id_int)]"/>
                                <field name = "date_init" required="1" widget="datetime" />
                                <field name = "date_end" required="1" widget="datetime" />
                                <field name = "delta" force_save="1" sum="Delta"/>
                                <field name = "folio" force_save="1"/>
                                <field name = "vehicle_id" required="1" options="{'no_open':True, 'no_create': True}"/>
                                <field name = "odometer_init" />
                                <field name = "odometer_end" />
                                <field name = "delta_odometer" force_save="1" sum="Delta odómetro"/>
                                <field name = "hourmeter_init" widget="float_time"/>
                                <field name = "hourmeter_end" widget="float_time" />
                                <field name = "delta_hourmeter" widget="float_time" force_save="1" sum="Delta horómetro"/>
                                <field name = "gasolina" />
                                <field name = "comment" />
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
